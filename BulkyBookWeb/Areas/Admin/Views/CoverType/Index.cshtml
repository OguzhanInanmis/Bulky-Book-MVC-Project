@model IEnumerable<CoverType>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row p-4">
        <div class="col-6">
            <h2 class="text-primary">Cover Type List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="CoverType" asp-action="Create" class="btn btn-outline-dark">
                <i class="bi bi-plus-lg"></i> &nbsp; Create New Cover Type</a>
        </div>
        
    </div>
</div>
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="80%">
                    @obj.Name
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="CoverType" asp-action="Edit" asp-route-id=@obj.Id class="btn btn-primary mx-1"><i class="bi bi-pencil-square"></i> Edit</a>
                        <a asp-controller="CoverType" asp-action="Delete" asp-route-id=@obj.Id class="btn btn-warning mx-1"><i class="bi bi-trash-fill"></i> Delete</a>
                    </div>
                </td>
            </tr>
           
        }
    </tbody>
</table>